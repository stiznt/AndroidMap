<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.SearchFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/backgroundSearchFragment">

        <View
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/corners_search"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="54dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/search"
                android:id="@+id/iconSearch"
                android:scaleX="-1" />

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_marginTop="42dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etSearch"
                android:hint="Введите запрос"
                android:fontFamily="@font/font_verdana"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="20sp"
                android:backgroundTint="@android:color/transparent"
                android:imeOptions="actionSearch" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="100dp"
            android:background="@color/blueLine" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="60dp"
            android:id="@+id/listStory"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>